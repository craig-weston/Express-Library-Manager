extends ../layout
block content
    include ../nav
    body
      h1 Patrons
      p
        a.button(href='/patrons/new') Create New Patron
      table
        thead
          tr
            th Name 
            th Address
            th Email
            th Library ID
            th Zip
        tbody
          each patron in patrons
            tr
              td
                a(href="/patrons/" + patron.id)= patron.first_name
              td= patron.last_name
              td= patron.email
              td= patron.library_id
              td= patron.zip_code